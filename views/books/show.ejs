<section class="page-header section-sm">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h1 class="section-title h2 mb-3">
          <span>
            <%= book.title %>
          </span>
        </h1>
        <ul class="list-inline breadcrumb-menu mb-3">
          <li class="list-inline-item"><a href="/"><i class="ti ti-home"></i> <span>Home</span></a></li>
          <li class="list-inline-item">• &nbsp; <a href="/books"><span>
                <%= book.title %>
              </span></a></li>
        </ul>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="row gy-5 gx-4 g-xl-5 mt-4">
      <div class="col-lg-6">

        <article class="card post-card h-100 border-0 bg-transparent">
          <div class="card-body">
            <a class="d-block" href="/authors/<%= book.author.id %>" title="View Author">
              <div class="post-image position-relative">
                <img class="w-100 h-auto rounded" src="<%= book.coverImagePath %>" width="970" height="500">
              </div>
            </a>
            <ul class="card-meta list-inline mb-3">
              <li class="list-inline-item mt-2">
                <i class="ti ti-calendar-event"></i>
                <span>
                  <%= book.publishDate.toDateString() %>
                </span>
              </li>
              <li class="list-inline-item mt-2">—</li>
              <li class="list-inline-item mt-2">
                <i class="ti ti-clock"></i>
                <span>02 min read</span>
              </li>
            </ul>
            <a class="d-block" href="blog-single.html" title="The AGI hype train is running out of steam">
              <h3 class="mb-3 post-title">
                <%= book.title %>
              </h3>
            </a>
            <p>
              <%= book.pageCount %> Pages
            </p>
            <p>
              <%= book.description %>
            </p>
          </div>
          <div class="card-footer border-top-0 bg-transparent p-0 mainulcards">

            <ul class="card-meta list-inline">
              <li class="list-inline-item mt-2">
                <a href="author-single.html" class="card-meta-author"
                  title="Read all posts by - <%= book.author.name %>">
                  <img class="w-auto" src="/assets/images/author/thomas-macaulay.jpg" alt="<%= book.author.name %>"
                    width="26" height="26"> by <span>
                    <%= book.author.name %>
                  </span>
                </a>
              </li>
              <li class="list-inline-item mt-2">•</li>
            </ul>

            <button class="myown-button_edit"><a href="/books/<%= book.id %>/edit">Edit</a></button>
            <%- include('../partials/deleteForm', {url: `/books/${book.id}`}) %>
          </div>

        </article>

      </div>
    </div>
</section>