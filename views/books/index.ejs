<section class="page-header section-sm">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h1 class="section-title h2 mb-3">
          <span>Books</span>
        </h1>
        <ul class="list-inline breadcrumb-menu mb-3">
          <li class="list-inline-item"><a href="/"><i class="ti ti-home"></i> <span>Home</span></a></li>
          <li class="list-inline-item">â€¢ &nbsp; <a href="/books"><span>All Books</span></a></li>
        </ul>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">

    <h2 class="h3 mb-4 text-center">Search Book</h2>

    <form class="row gx-3 gy-2 align-items-center d-flex justify-content-center" action="/books" method="get">

      <div class="col-sm-3">
        <label>Enter Title of Book</label>
        <input type="text" class="form-control" placeholder="Enter Title" name="title"
          value="<%= searchOptions.title %>">
      </div>

      <div class="col-sm-3">
        <label>Published After</label>
        <input type="date" class="form-control" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
      </div>

      <div class="col-sm-3">
        <label>Published Before</label>
        <input type="date" class="form-control" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
      </div>

      <div class="col-auto">
        <button type="submit" class="btn btn-success mt-md-4">Search <i class="ti ti-search"></i></button>
      </div>

    </form>
  </div>

</section>

<hr>

<section>
  <div class="container">
    <div class="row gy-5 gx-4 g-xl-5 mt-4">
      <% books.forEach(book=> { %>
        <div class="col-lg-6">
          <article class="card post-card h-100 border-0 bg-transparent">
            <div class="card-body">
              <a class="d-block" href="/books/<%= book.id %>" title="The AGI hype train is running out of steam">
                <div class="post-image position-relative">
                  <img class="w-100 h-auto rounded" src="<%= book.coverImagePath %>"
                    alt="The AGI hype train is running out of steam" width="970" height="500">
                </div>
              </a>
              <ul class="card-meta list-inline mb-3">
                <li class="list-inline-item mt-2">
                  <i class="ti ti-calendar-event"></i>
                  <span><%= book.publishDate.toDateString() %></span>
                </li>
              </ul>
              <a class="d-block" href="/books/<%= book.id %>" title="The AGI hype train is running out of steam">
                <h3 class="mb-3 post-title">
                  <%= book.title %>
                </h3>
              </a>
              <p>
                <%= book.description %>
              </p>
            </div>
            
          </article>
        </div>
        <% }) %>
    </div>
</section>