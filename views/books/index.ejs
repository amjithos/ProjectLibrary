<section class="page-header section-sm">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h1 class="section-title h2 mb-3">
          <span>Books</span>
        </h1>
        <ul class="list-inline breadcrumb-menu mb-3">
          <li class="list-inline-item"><a href="/"><i class="ti ti-home"></i> <span>Home</span></a></li>
          <li class="list-inline-item">• &nbsp; <a href="/books"><span>Contact</span></a></li>
        </ul>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="row gy-5 justify-content-center">

      <div class="col-lg-5 col-md-10 ms-lg-auto me-lg-0 me-auto">
        <div class="mb-5">
          <h2 class="h3 mb-3">Contact Qurno</h2>
          <p class="mb-0">I&rsquo;m here to help and answer any question you might have. I look forward to hearing from
            you</p>
        </div>
        <div>
          <h2 class="h4 mb-3">Hate forms? <br> Write an email or make a call</h2>
          <p class="mb-2 content">
            <i class="ti ti-mail-forward me-2 d-inline-block mb-0" style="transform:translateY(2px)"></i> <a
              href="mailto:contact@qurno.com">contact@qurno.com</a>
          </p>
          <p class="mb-0 content"><i class="ti ti-phone me-2"></i> +98 02 296 4902</p>
        </div>
      </div>

      <div class="col-lg-5 me-lg-auto ms-lg-0 ms-auto">
        <h2 class="h3 mb-4">Search Book</h2>

        <form class="row g-4" action="/books" method="get">
          <div class="col-md-12">
            <input type="text" class="form-control" placeholder="Enter Title" name="title"
              value="<%= searchOptions.title %>">
          </div>

          <div class="col-md-12">
            <label>Published After</label>
            <input type="date" class="form-control" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
          </div>

          <div class="col-md-12">
            <label>Published Before</label>
            <input type="date" class="form-control" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
          </div>

          <div class="col-12">
            <button type="submit" class="btn btn-success">Search <i class="ti ti-search"></i></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<hr>

<section>
  <div class="container">
    <div class="row gy-5 gx-4 g-xl-5 mt-4">
      <% books.forEach(book=> { %>
        <div class="col-lg-6">
          <article class="card post-card h-100 border-0 bg-transparent">
            <div class="card-body">
              <a class="d-block" href="/books/<%= book.id %>" title="The AGI hype train is running out of steam">
                <div class="post-image position-relative">
                  <img class="w-100 h-auto rounded" src="<%= book.coverImagePath %>"
                    alt="The AGI hype train is running out of steam" width="970" height="500">
                </div>
              </a>
              <ul class="card-meta list-inline mb-3">
                <li class="list-inline-item mt-2">
                  <i class="ti ti-calendar-event"></i>
                  <span>05 Dec, 2021</span>
                </li>
                <li class="list-inline-item mt-2">—</li>
                <li class="list-inline-item mt-2">
                  <i class="ti ti-clock"></i>
                  <span>02 min read</span>
                </li>
              </ul>
              <a class="d-block" href="/books/<%= book.id %>" title="The AGI hype train is running out of steam">
                <h3 class="mb-3 post-title">
                  <%= book.title %>
                </h3>
              </a>
              <p>
                <%= book.description %>
              </p>
            </div>
            <div class="card-footer border-top-0 bg-transparent p-0">
              <ul class="card-meta list-inline">
                <li class="list-inline-item mt-2">
                  <a href="/books/<%= book.id %>" class="card-meta-author" title="Read all posts by - Thomas Macaulay">
                    <img class="w-auto" src="/assets/images/author/thomas-macaulay.jpg" alt="Thomas Macaulay" width="26"
                      height="26"> by <span>hh</span>
                  </a>
                </li>
              </ul>
            </div>
          </article>
        </div>
        <% }) %>
    </div>
</section>